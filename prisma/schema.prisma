// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Board {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  columns     Column[]
}

model Column {
  id      Int    @id @default(autoincrement())
  title   String
  boardId Int
  board   Board  @relation(fields: [boardId], references: [id])
  tasks   Task[]

  @@index([boardId])
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  subTasks    Json
  columnId    Int
  column      Column    @relation(fields: [columnId], references: [id])

  @@index([columnId])
}